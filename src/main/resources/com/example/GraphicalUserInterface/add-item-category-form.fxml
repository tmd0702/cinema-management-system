                <Label layoutX="64.0" layoutY="108.0" prefHeight="17.0" prefWidth="105.0" text="Category name" textFill="WHITE">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font></Label>
                <TextField fx:id="itemPricePriceField" layoutX="422.0" layoutY="104.0">
               <font>
                  <Font name="Georgia" size="13.0" />
