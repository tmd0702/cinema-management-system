                <Label layoutX="366.0" layoutY="108.0" prefHeight="17.0" prefWidth="45.0" text="Price" textFill="WHITE">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font></Label>
            </children>
        </AnchorPane>
    </children>
